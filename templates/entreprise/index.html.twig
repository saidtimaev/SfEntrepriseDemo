{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}
    <h1>Liste des entreprises</h1><br>

    <a class="btn btn-success" href="{{ path('new_entreprise')}}">Ajouter une entreprise</a><br>

    {% for entreprise in entreprises %}
       <b> <a href="{{ path('show_entreprise', {'id': entreprise.id}) }}">{{entreprise}}</a></b> 
       <a class="btn btn-warning" href="{{ path('edit_entreprise', {'id': entreprise.id}) }}">Edit</a>
       <a class="btn btn-danger" href="{{ path('delete_entreprise', {'id': entreprise.id}) }}">Supprimer</a><br>
       <br>
    {% endfor %}
        
{% endblock %}
