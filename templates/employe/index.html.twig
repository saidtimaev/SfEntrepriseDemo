{% extends 'base.html.twig' %}

{% block title %}Liste des employés{% endblock %}

{% block body %}
    <h1>Liste des employés</h1><br>

    <a class="btn btn-success" href="{{ path('new_employe')}}">Ajouter un employé</a><br>


    {% for employe in employes %}
        <b> <a href="{{ path('show_employe', {'id': employe.id}) }}">{{employe}}</a> ({{employe.entreprise.raisonSociale}}) </b> 
        <a class="btn btn-warning" href="{{ path('edit_employe', {'id': employe.id}) }}">Edit</a><br>
        <a class="btn btn-danger" href="{{ path('delete_employe', {'id': employe.id}) }}">Supprimer</a><br>
    {% endfor %}
{% endblock %}
